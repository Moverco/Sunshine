<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:id="@+id/date"
        android:layout_marginLeft="10dp"
        android:text="@string/default_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/weather"
        android:layout_toRightOf="@id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp" />

    <ImageView
        android:background="@mipmap/ic_launcher"
        android:id="@+id/weather_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lo_tempreture"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp" />

    <TextView
        android:textSize="25dp"
        android:id="@+id/hi_tempreture"
        android:text="99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_alignLeft="@+id/lo_tempreture" />

    <TextView
        android:textSize="18dp"
        android:layout_marginLeft="31dp"
        android:text="00"
        android:id="@+id/lo_tempreture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hi_tempreture"
        android:layout_alignLeft="@+id/date" />
</RelativeLayout>
